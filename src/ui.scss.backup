/* Variables */
:root {
  --fpl-dialog-elevation: 0 2px 5px 0 #00000059, inset 0 0 0.5px 0 #ffffff59,
    0 10px 16px 0 #00000059, inset 0 0.5px 0 0 #ffffff14;
  --elevation-500: 0 3px 5px 0 #00000059, inset 0 0 0.5px 0 #ffffff59,
    0 10px 24px 0 #00000073, inset 0 0.5px 0 0 #ffffff14;
}

/* Global Styles */
body,
* {
  box-sizing: border-box;
  color: var(--figma-color-text, #ffffff);
  font-size: 11px;
  line-height: 16px;
  font-weight: 450;
  margin: 0;

  // Firefox scrollbar styles
  scrollbar-width: auto;
  scrollbar-color: #b3b3b380 transparent;
}

body {
  font-family: "Inter", sans-serif;
  padding-bottom: 107px;
}

/* Scrollbar Styles */
::-webkit-scrollbar {
  width: 10px;

  &-track {
    background: transparent;
  }

  &-thumb {
    background: #b3b3b380;
    border-radius: 6px;
    border: 2px solid transparent;
    background-clip: padding-box;
    width: 6px;

    &:hover {
      background: #b3b3b3bb;
      background-clip: padding-box;
    }
  }

  &-button {
    display: none;
  }
}

.tabs-container {
  display: flex;
  flex-direction: column;
}

.tab {
  &-buttons {
    display: flex;
    gap: 4px;
    padding: 8px 16px;
    position: sticky;
    top: 0;
    z-index: 100;
    width: 100%;
    overflow: auto;
    background-color: var(--figma-color-bg, #2c2c2c);

    scrollbar-width: none;
    &::-webkit-scrollbar {
      display: none;
    }
  }

  &-button {
    padding: 8px;
    font-size: 11px;
    line-height: 16px;
    font-weight: 550;
    background-color: transparent;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    color: var(--figma-color-text-secondary, #ffffffb3);
    transition: all 0.2s;
    position: relative;
    white-space: nowrap;

    &:hover {
      background-color: var(--figma-color-bg-hover, #383838);
    }

    &.active {
      background-color: var(--figma-color-bg-secondary, #383838);
      color: var(--figma-color-text, #ffffff);
      font-weight: 550;
    }
  }

  &-contents {
    position: relative;
  }

  &-content {
    display: none;

    &.active {
      display: block;
    }
  }
}

section {
  display: flex;
  flex-direction: column;
  gap: 12px;
  padding: 12px 16px;
  border-top: 1px solid var(--figma-color-border, #444444);

  &:last-child {
    border-bottom: 1px solid var(--figma-color-border, #444444);
  }

  &.section-depth-1 {
    padding: 6px 0 6px 16px;
    border-top: none;
    border-bottom: none;
    border-left: 2px solid var(--figma-color-border, #444444);
  }
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12px;
}

h2,
h3 {
  font-weight: 550;
}

h3 {
  color: var(--figma-color-text-secondary, #ffffffb3);
}

fieldset {
  display: flex;
  flex-direction: column;
  gap: 8px;
  border: none;
  padding: 8px 0 0;
}

.input {
  &-row,
  &-column {
    display: flex;

    &:hover {
      label {
        color: var(--figma-color-text-hover, #ffffff);
      }
    }

    &:has(input:focus),
    &:has(select:focus),
    &:has(.color-selector-button.active) {
      label {
        color: var(--figma-color-text, #ffffff);
      }
    }
  }

  &-row {
    gap: 4px;
    align-items: center;
  }

  &-column {
    flex-direction: column;
    gap: 8px;
  }
}

label {
  color: var(--figma-color-text-secondary, #ffffffb3);
  letter-spacing: 0.05504px;
  width: 100%;
}

input,
select,
.color-selector-button {
  background-color: var(--figma-color-bg-secondary, #383838);
  border: 1px solid var(--figma-color-bg-secondary, #383838);
  border-radius: 5px;
  margin: 1px 0;
  color: var(--figma-color-text, #ffffff);
  flex-shrink: 0;

  &.active,
  &:focus,
  &:focus-visible {
    outline: none;
    border-color: var(----figma-color-border-selected, #0c8ce9);
  }
}

input,
select {
  padding: 4px 7px;
  &.active {
    border-color: var(----figma-color-border-selected, #0c8ce9);
  }

  &[type="number"] {
    width: 72px;
    -moz-appearance: textfield;

    &::-webkit-outer-spin-button,
    &::-webkit-inner-spin-button {
      -webkit-appearance: none;
      margin: 0;
    }
  }
}

select {
  cursor: pointer;
  padding: 4px 4px 4px 7px;
  min-width: 72px;
  width: fit-content;

  &:hover {
    border-color: var(--figma-color-border-secondary, #4444);
  }
}

/* Color Selector Component */
.color {
  &-selector {
    &-wrapper {
      position: relative;

      label {
        width: 100%;
      }
    }

    &-label-input {
      width: 100%;
    }

    &-button {
      display: flex;
      align-items: center;
      cursor: pointer;
      padding: 0 4px 0 0;
      width: 90px;
    }

    &-popup {
      position: absolute;
      top: calc(100% + 4px);
      left: 0;
      z-index: 1000;
      background: #1e1e1e;
      border: 1px solid var(--figma-color-border, #444444);
      border-radius: 13px;
      padding: 16px 0 16px 16px;
      display: none;
      overflow-y: auto;
      width: 206px;
      max-height: 304px;
      box-shadow: var(--fpl-dialog-elevation, var(--elevation-500));

      &.active {
        display: block;
      }
    }

    &-grid {
      display: flex;
      flex-direction: column;
      gap: 12px;
    }
  }

  &-custom {
    display: flex;
    gap: 8px;
    align-items: center;
    margin-right: 1px;

    input {
      width: 100%;
    }

    button {
      width: 24px;
      height: 24px;
      flex-shrink: 0;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 11px;
      line-height: 16px;
      padding: 0;
      background: transparent;
    }
  }

  &-preview {
    width: 14px;
    height: 14px;
    margin: 5px 5px 5px 4px;
    border-radius: 2px;
    flex-shrink: 0;

    &.empty {
      border: 1px solid var(--figma-color-border, #4444);
      background-color: transparent;
    }
  }

  &-text {
    flex: 1;
    text-align: left;
    letter-spacing: 0.05504px;
  }

  &-family {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  &-swatch {
    width: 28px;
    height: 28px;
    border-radius: 7px;
    border: 2px solid transparent;
    cursor: pointer;
    transition: all 0.15s;
    position: relative;

    &-wrapper {
      display: flex;
      flex-wrap: wrap;
      gap: 8px;
    }

    &:hover {
      transform: scale(1.15);
      border: 2px solid var(--figma-color-border-onselected, #667799);
      z-index: 10;
    }

    &.selected {
      border: 2px solid var(--figma-color-border-selected, #0c8ce9);
    }
  }
}

button {
  padding: 4px 7px;
  font-size: 13px;
  line-height: 24px;
  background-color: var(--figma-color-bg-secondary, #383838);
  border-radius: 5px;
  cursor: pointer;
  outline: none;
  appearance: none;
  -webkit-appearance: none;
  border: none;

  &:hover {
    background-color: var(--figma-color-bg-tertiary, #444444);
  }
}

.actions {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: var(--figma-color-bg, #2c2c2c);
}

/* Icon Button Base Style */
.icon-btn {
  width: 24px;
  height: 24px;
  padding: 0;
  font-size: 16px;
  line-height: 16px;
  white-space: nowrap;
  display: flex;
  align-items: center;
  justify-content: center;
  background: transparent;
  flex-shrink: 0;
  border-radius: 3px;
  cursor: pointer;
  color: var(--figma-color-icon);

  i {
    font-size: 16px;
  }

  &:hover {
    background-color: var(--figma-color-bg-hover, #383838);
  }

  &:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }
}

/* Palette Generator Styles */
.palette {
  &-generator {
    display: flex;
    flex-direction: column;
  }

  &-controls {
    display: flex;
    gap: 4px;
  }

  &-colors {
    display: grid;
    border-radius: 5px;
    overflow: hidden;

    &.palette-cols-2 {
      grid-template-columns: repeat(2, 1fr);
    }

    &.palette-cols-3 {
      grid-template-columns: repeat(3, 1fr);
    }

    &.palette-cols-4 {
      grid-template-columns: repeat(4, 1fr);
    }

    &.palette-cols-5 {
      grid-template-columns: repeat(5, 1fr);
    }
  }

  &-color {
    &-card {
      display: flex;
      flex-direction: column;
    }

    &-square {
      position: relative;
      height: 80px;
      flex-shrink: 0;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: flex-end;
      overflow: hidden;
      cursor: default;

      &:hover {
        .palette-color-overlay {
          opacity: 1;
        }
      }
    }

    &-overlay {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background-color: rgba(0, 0, 0, 0.7);
      opacity: 0;
      transition: opacity 0.2s;
    }

    &-name {
      text-shadow: 0 1px 2px rgba(0, 0, 0, 0.5);
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }
  }

  &-lock-btn,
  &-remove-btn,
  &-copy-btn {
    position: absolute;
  }
  &-lock-btn {
    top: 4px;
    left: 4px;
  }
  &-remove-btn {
    top: 4px;
    right: 4px;
  }
  &-copy-btn {
    width: auto;
    padding: 0 6px;
    justify-content: space-between;
    gap: 4px;
    bottom: 4px;
    left: 4px;
    right: 4px;
  }
}

/* Color Collection Styles */
.color-collection {
  display: flex;
  flex-direction: column;
  gap: 8px;

  &-items {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  &-remove-btn {
    flex-shrink: 0;
  }

  &-add-btn {
    flex-shrink: 0;
  }
}
